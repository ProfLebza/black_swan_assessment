{% extends 'base.html.twig' %}

{% block title %}
    {{ page_title|default('Black Swan Assessment - Contact') }}
{% endblock %}

{% block content %}

<div class="container mt-4 pt-2 pb-3 contact">

    <div class="row">
        <div class="col-md-12">
            {% if submitted %}
                {% set alert_class = 'danger' %}
                {% set alert = 'Error' %}
                {% if success %}
                    {% set alert_class = 'success' %}
                    {% set alert = 'Success' %}
                {% endif %}
                <div class="alert alert-{{ alert_class }} alert-dismissible fade show" role="alert">
                    <strong>{{ alert|title }}!</strong> {{ message }}
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            {% endif %}
        </div>
    </div>

    <div class="row">
        <div class="col-sm-12 col-md-12 col-lg-3">
            <div class="contact-info">
                <h2>Contact</h2>
                <h5>Saving contact entity to database!</h5>
            </div>
        </div>

        <div class="col-sm-12 col-md-12 col-lg-9">
            <div class="contact-form">
                {{ form_start(form) }}
                {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>

{% endblock %}